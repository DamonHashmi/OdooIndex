<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_report_header_footer" model="ir.ui.view">
            <field name="name">view.company.form.report.header.footer</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='logo']" position="after">
                    <field name="header" widget="image" class="oe_avatar"/>
                    <field name="footer" widget="image" class="oe_avatar"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>